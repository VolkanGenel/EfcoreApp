@model Instructor

<h2>Update Instructor</h2>
<hr>
<div class="row">
    <div class="col-8">
        <form asp-controller="Instructor" asp-action="Edit" method="post">
            <input type="hidden" asp-for="InstructorId">
            <div class="mb-3">
                <label asp-for="Name" class="form-label">Instructor Name</label>
                <input asp-for="Name" class="form-control">
            </div>
            <div class="mb-3">
                <label asp-for="Surname" class="form-label">Instructor Surname</label>
                <input asp-for="Surname" class="form-control">
            </div>
            <div class="mb-3">
                <label asp-for="EMail" class="form-label">EMail</label>
                <input asp-for="EMail" class="form-control">
            </div>
            <div class="mb-3">
                <label asp-for="PhoneNumber" class="form-label">PhoneNumber</label>
                <input asp-for="PhoneNumber" class="form-control">
            </div>
            <div class="mb-3">
                <label asp-for="StartDate" class="form-label">Start Date</label>
                <input asp-for="StartDate" class="form-control">
            </div>
            <button type="submit" class="btn btn-secondary">Kaydet</button>
        </form>
    </div>
    <div class="col-4">
        <h4>Courses</h4>
        <hr>
        <ul>
            @foreach (var item in @Model.Courses)
            {
                <li>@item.Title</li>
            }
        </ul>
    </div>
</div>


